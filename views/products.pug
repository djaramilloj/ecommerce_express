extends layout.pug

block hero
    section.hero.is-dark.is-bold
        .hero-body
            .conatiner
                h1.title Octolion Shop
                h2.subtilte FInd tthe best products at the best price

block content
    .conatiner(style="flex: 1; padding: 50px 0;")
        .columns.is-multiline
            each product in products
                .column.is-one-quarter
                    .card
                        .card-image
                            figure.image(style="hight: 190px")
                                img(src=product.image style="height: 100%; object-fit: cover")
                        .card-content
                            h1.title= product.name
                            .button.is-fullwidth.is-primary
                                span.icon   
                                    i.fas.fa-shopping-cart
                                span Add to cart
                                strong= `${product.price} USD`
